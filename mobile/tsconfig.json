{
    "extends":  "@tsconfig/react-native/tsconfig.json",
    "compilerOptions":  {
                            "outDir":  "./build",
                            "noEmit":  true,
                            "strict":  true,
                            "baseUrl":  ".",
                            "paths":  {
                                          "@screens/*":  [
                                                             "src/screens/*"
                                                         ],
                                          "@components/*":  [
                                                                "src/components/*"
                                                            ],
                                          "@navigation/*":  [
                                                                "src/navigation/*"
                                                            ],
                                          "@store/*":  [
                                                           "src/store/*"
                                                       ],
                                          "@api/*":  [
                                                         "src/api/*"
                                                     ],
                                          "@hooks/*":  [
                                                           "src/hooks/*"
                                                       ],
                        "@utils/*":  [
                                         "src/utils/*"
                                     ],
                        "@theme/*":  [
                                         "src/theme/*"
                                     ],
                        "@i18n/*":  [
                                        "src/i18n/*"
                                    ]
                    },
                            "types":  [
                                          "jest",
                                          "react-native",
                                          "react"
                                      ],
                            "jsx":  "react-native",
                            "lib":  [
                                        "es2021"
                                    ],
                            "esModuleInterop":  true,
                            "skipLibCheck":  true
                        },
    "include":  [
                    "src",
                    "index.ts",
                    "jest.setup.ts"
                ],
    "exclude":  [
                    "node_modules",
                    "build"
                ]
}
